<Window x:Class="ValidCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValidCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" x:Name="TextBox1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" x:Name="TextBox2"/>
        <Button Content="if-check" HorizontalAlignment="Left" Margin="55,66,0,0" VerticalAlignment="Top" Width="75" Click="IfCheck" />
        <Button Content="xor-check" HorizontalAlignment="Left" Margin="55,101,0,0" VerticalAlignment="Top" Width="75" Click="XORCheck"/>
    </Grid>
</Window>
